<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/actionbar_style</item>
        <!--<item name="android:windowActionBarOverlay">true</item>-->
    </style>

    <style name="actionbar_style" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@drawable/actionbar_bg</item>
        <item name="android:titleTextStyle">@style/action_title_text_style</item>
    </style>

    <style name="action_title_text_style" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">#8E8E8E</item>
    </style>

    <style name="timeline_item_content">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="timeline_item_content_without_cover" parent="timeline_item_content">
        <item name="android:paddingTop">10dp</item>
        <!--<item name="android:paddingBottom">0dp</item>-->
    </style>

    <style name="timeline_item_text">
        <item name="android:textColor">#F0F8FF</item>
    </style>

    <style name="timeline_item_title" parent="timeline_item_text">
        <item name="android:textSize">20dp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:maxLength">30</item>
        <item name="android:ellipsize">marquee</item>
    </style>

    <style name="timeline_item_title_without_cover" parent="timeline_item_text">
        <item name="android:textSize">27dp</item>
        <item name="android:textColor">#424242</item>
    </style>

    <style name="timeline_item_site" parent="timeline_item_text">
        <item name="android:maxLength">20</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:textColor">#F0F8FF</item>
        <item name="android:textSize">15dp</item>
    </style>

    <style name="timeline_item_site_without_cover" parent="timeline_item_text">
        <item name="android:textColor">#424242</item>
        <item name="android:textSize">15dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>


</resources>
