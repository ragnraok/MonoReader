<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/actionbar_style</item>
        <!--<item name="android:windowActionBarOverlay">true</item>-->
        <!--<item name="android:progressBarStyle">@android:style/Widget.Holo.ProgressBar.Horizontal</item>-->
        <item name="ptrHeaderStyle">@style/custom_ptr_header</item>
    </style>

    <style name="actionbar_style" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@drawable/actionbar_bg</item>
        <item name="android:titleTextStyle">@style/action_title_text_style</item>
    </style>

    <style name="action_title_text_style" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">#424242</item>
        <item name="android:shadowColor">#C1C1C1</item>
        <item name="android:shadowDx">1.5</item>
        <item name="android:shadowDy">1.5</item>
        <item name="android:shadowRadius">1.0</item>
    </style>

    <style name="timeline_item_content">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="timeline_item_content_without_cover" parent="timeline_item_content">
        <item name="android:paddingTop">10dp</item>
    </style>

    <style name="timeline_item_text">
        <item name="android:textColor">#F0F8FF</item>
        <item name="android:shadowColor">#424242</item>
        <item name="android:shadowDx">1.5</item>
        <item name="android:shadowDy">1.5</item>
        <item name="android:shadowRadius">2.0</item>
    </style>

    <style name="timeline_item_title" parent="timeline_item_text">
        <item name="android:textSize">20dp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:ellipsize">marquee</item>
    </style>

    <style name="timeline_item_text_without_cover" parent="timeline_item_text">
        <item name="android:shadowColor">#C1C1C1</item>
    </style>

    <style name="timeline_item_title_without_cover" parent="timeline_item_text_without_cover">
        <item name="android:textSize">27dp</item>
        <item name="android:textColor">#424242</item>
        <item name="android:ellipsize">marquee</item>
    </style>

    <style name="timeline_item_site" parent="timeline_item_text">
        <item name="android:maxLength">20</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:textColor">#F0F8FF</item>
        <item name="android:textSize">15dp</item>
    </style>

    <style name="timeline_item_site_without_cover" parent="timeline_item_text_without_cover">
        <item name="android:textColor">#424242</item>
        <item name="android:textSize">15dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="ptr_progress_bar_style" parent="SmoothProgressBar">
        <item name="spb_stroke_separator_length">12dp</item>
        <item name="spb_sections_count">4</item>
        <item name="spb_speed">0.7</item>
        <item name="spb_color">@color/ptr_progress_bar_color</item>
    </style>

    <style name="custom_ptr_header" parent="android:Widget">
        <item name="ptrHeaderBackground">@drawable/actionbar_bg</item>
        <item name="ptrProgressBarColor">@color/ptr_progress_bar_color</item>
        <item name="ptrPullText">Pull To Refresh</item>
        <item name="ptrRefreshingText">Loading...</item>
        <item name="ptrReleaseText">Release to refresh...</item>
        <item name="ptrSmoothProgressBarStyle">@style/ptr_progress_bar_style</item>
        <item name="ptrHeaderTitleTextAppearance">@style/action_title_text_style</item>

    </style>

    <style name="drawer_item_text">
        <item name="android:textColor">#424242</item>
        <!--<item name="android:shadowColor">#424242</item>-->
        <!--<item name="android:shadowDx">1.5</item>-->
        <!--<item name="android:shadowDy">1.5</item>-->
        <!--<item name="android:shadowRadius">2.0</item>-->
        <item name="android:textSize">20dp</item>
    </style>

    <style name="drawer_header_app_name_text">
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:textSize">25dp</item>
        <item name="android:textColor">#424242</item>
        <item name="android:shadowColor">#B7B7B7</item>
        <item name="android:shadowDx">1.5</item>
        <item name="android:shadowDy">1.5</item>
        <item name="android:shadowRadius">1.2</item>
    </style>

    <style name="drawer_header_version_info_text">
        <item name="android:textColor">#5C5C5C</item>
        <item name="android:textSize">10dp</item>
    </style>

</resources>
