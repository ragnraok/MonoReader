<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="timeline_item_content">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="timeline_item_text">
        <item name="android:textColor">#F0F8FF</item>
    </style>

    <style name="timeline_item_title" parent="timeline_item_text">
        <item name="android:textSize">20dp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:maxLength">30</item>=
        <item name="android:ellipsize">marquee</item>
    </style>

    <style name="timeline_item_site" parent="timeline_item_text">
        <item name="android:maxLength">20</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:textColor">#F0F8FF</item>
        <item name="android:textSize">15dp</item>
    </style>


</resources>
