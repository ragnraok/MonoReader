<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:title="@string/basic_setting">
        <EditTextPreference
            android:key="host"
            android:title="@string/host_setting"
            android:text="@string/host_prefix"
            />
    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/cache_setting">
        <Preference
            android:title="@string/cache_size"
            android:summary="1024KB"
            android:key="cache_size"/>
        <Preference
            android:title="@string/clear_cache"
            android:key="clear_cache"/>

    </PreferenceCategory>

</PreferenceScreen>